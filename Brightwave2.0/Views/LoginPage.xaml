<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Brightwave2.Views.LoginPage">

	<StackLayout x:Name="MasterLayout">
        <StackLayout x:Name = "LogoStack" VerticalOptions="FillAndExpand">
            <Image x:Name = "LoginIcon" Source="LoginIcon.png" Margin="0,80,0,0"/>
            
        </StackLayout>
        <StackLayout x:Name = "FieldsStack" VerticalOptions="StartAndExpand">
            <StackLayout.Padding>             

            </StackLayout.Padding>
            <ActivityIndicator x:Name = "ActivitySpinner" Color="Gray" IsRunning="true"/>
            <Label x:Name = "userLabel" Text = "Username" Margin ="50,10,50,0" />
            <Entry x:Name = "userText" Placeholder="Username" Margin ="50,0,50,0"/>
            <Label x:Name = "passLabel" Text="Password" Margin ="50,10,50,0"/>
            <Entry x:Name = "passText" Placeholder="Password" Margin ="50,0,50,0"/>    
            <Button x:Name = "loginButton" Text="Login" Clicked="SignInProcedure" Margin ="100,40,100,0" BackgroundColor="Orange"/>
            <Button x:Name= "Test" Text="Test" Clicked="TestSegue"/>               
        </StackLayout>
    </StackLayout>
   
    
</ContentPage>
