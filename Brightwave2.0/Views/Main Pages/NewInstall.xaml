<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Brightwave2.Views.LoginPage">
    <StackLayout x:Name="MasterLayout">
        <StackLayout x:Name = "LogoStack" VerticalOptions="FillAndExpand">
            <Image x:Name = "LoginIcon" Source="LoginIcon.png" Margin="0,80,0,0"/>
            
        </StackLayout>
        <StackLayout x:Name = "FieldsStack" VerticalOptions="StartAndExpand">
            <StackLayout.Padding>             

            </StackLayout.Padding>
            <ActivityIndicator x:Name = "ActivitySpinner" Color="Gray" IsRunning="true"/>
            
            <Label x:Name = "SerialNumLabel" Text = "Username" />
            <Entry x:Name = "SerialNumText" Placeholder="Username"/>
            <Label x:Name = "CoordinatesLabel" Text="Password"/>
            <Entry x:Name = "CoordinatesText" Placeholder="Password"/>    
            <Button x:Name = "SubmitButton" Text="Submit" Clicked="SubmitToDataBase"/>
           
        </StackLayout>
    </StackLayout>
   
    
</ContentPage>
